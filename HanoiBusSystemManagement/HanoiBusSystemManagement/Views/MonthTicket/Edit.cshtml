@model HanoiBusSystemManagement.Models.VeThang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "MonthTicket", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Sửa thông tin vé tháng</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">Tên vé tháng</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TenVeThang, null, new { @style = "width:300px;", @required = "true", @placeholder = "Nhập theo dạng: /Ticket{dd}{mm}{yy}/" })
                @Html.ValidationMessageFor(model => model.TenVeThang)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Đơn giá</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DonGia, null, new { @style = "width:300px;", @required = "true", @type = "number" })
                @Html.ValidationMessageFor(model => model.DonGia)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ghi chú</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.GhiChu, null, new { @style = "width:300px;" })
                @Html.ValidationMessageFor(model => model.GhiChu)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/MonthTicket/Index" class="btn btn-round btn-warning">Trở lại</a>
                <input class="btn btn-round btn-success" type="submit" value="Đồng Ý" />
            </div>
        </div>
    </div>
}