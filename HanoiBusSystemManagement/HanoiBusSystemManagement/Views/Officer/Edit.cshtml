@model HanoiBusSystemManagement.Models.NhanVienVanPhong

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Sửa thông tin nhân viên</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">Họ tên</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.HoTen, null, new { @class = "form-control", @style = "width:300px;", @required = "true" })
                @Html.ValidationMessageFor(model => model.HoTen)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày sinh</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NgaySinh, null, new { @class = "form-control", @style = "width:300px;", @required = "true", @type = "date" })
                @Html.ValidationMessageFor(model => model.NgaySinh)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giới tính</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.GioiTinh, new List<SelectListItem>
           {
               new SelectListItem(){Text = "Nam", Value = "true"},
               new SelectListItem(){Text = "Nữ", Value = "false"}
           }, new { @class = "form-control", @style = "width:300px;" })
                @Html.ValidationMessageFor(model => model.GioiTinh)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Địa chỉ</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DiaChi, null, new { @class = "form-control", @style = "width:300px;", @required = "true" })
                @Html.ValidationMessageFor(model => model.DiaChi)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Điện thoại</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DienThoai, null, new { @class = "form-control", @style = "width:300px;", @required = "true", @type = "number" })
                @Html.ValidationMessageFor(model => model.DienThoai)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Số chứng minh thư</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.SoCMTND, null, new { @class = "form-control", @style = "width:300px;", @required = "true", @type = "number" })
                @Html.ValidationMessageFor(model => model.SoCMTND)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Bằng cấp</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BangCap, null, new { @class = "form-control", @style = "width:300px;", @required = "true" })
                @Html.ValidationMessageFor(model => model.BangCap)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Phòng ban</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MaPhongBan, new List<SelectListItem>
           {
               new SelectListItem(){Text = "Nhân sự", Value= "1"},
               new SelectListItem(){Text = "Điều hành", Value= "2"},
               new SelectListItem(){Text = "Kinh doanh", Value= "3"},
               new SelectListItem(){Text = "Quản lý", Value= "4"},
           }, new { @class = "form-control", @style = "width:300px;" })
                @Html.ValidationMessageFor(model => model.MaPhongBan)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/Officer/Index" class="btn btn-round btn-warning">Trở lại</a>
                <input class="btn btn-round btn-success" type="submit" value="Đồng Ý" />
            </div>
        </div>
    </div>
}

