@model HanoiBusSystemManagement.Models.PhuXe

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section ImageJS
{
    <script>
        function BrowseServer() {
            var finder = new CKFinder();
            finder.selectActionFunction = SetFileField;
            finder.popup();
        }
        function SetFileField(fileUrl) {
            document.getElementById("Image").value = fileUrl;
        }
    </script>

}

@using (Html.BeginForm("Create", "Assistant", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thêm phụ xe</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">Họ tên</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.HoTen, null, new { @style = "width:300px;", @required = "true" })
                @Html.ValidationMessageFor(model => model.HoTen)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày sinh</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NgaySinh, null, new { @style = "width:300px;", @required = "true", @type = "date" })
                @Html.ValidationMessageFor(model => model.NgaySinh)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giới tính</label>
            <div class="col-md-10">
                <select style="width:300px; height:28px;" name="gender">
                    <option value="true">Nam</option>
                    <option value="false">Nữ</option>
                </select>
                @Html.ValidationMessageFor(model => model.GioiTinh)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Địa chỉ</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DiaChi, null, new { @style = "width:300px;", @required = "true" })
                @Html.ValidationMessageFor(model => model.DiaChi)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Điện thoại</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DienThoai, null, new { @style = "width:300px;", @required = "true", @type = "number" })
                @Html.ValidationMessageFor(model => model.DienThoai)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Số chứng minh thư</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.SoCMTND, null, new { @style = "width:300px;", @required = "true", @type = "number" })
                @Html.ValidationMessageFor(model => model.SoCMTND)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ảnh cá nhân</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AnhCaNhan, new { @id = "Image", @name = "Image", @style = "width:225px;", @required = "true" })
                <input value="Chọn ảnh" class="input-file uniform_on" id="fileInput" type="button" onclick="BrowseServer();" />
                @Html.ValidationMessageFor(model => model.AnhCaNhan)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tuyến xe</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MaTuyenXe, null, new { @class = "form-control", @style = "width:300px;" })
                @Html.ValidationMessageFor(model => model.MaTuyenXe)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/Assistant/Index" class="btn btn-round btn-warning">Trở lại</a>
                <input class="btn btn-round btn-success" type="submit" value="Đồng Ý" />
            </div>
        </div>
    </div>
}
