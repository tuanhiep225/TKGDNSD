@model IEnumerable<HanoiBusSystemManagement.Models.BanVeNgay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PrintJS
{
    <script>
        $(document).ready(function () {
            var handleDataTableButtons = function () {
                if ($("#datatable-buttons").length) {
                    $("#datatable-buttons").DataTable({
                        dom: "Bfrtip",
                        buttons: [
                        ],
                        responsive: true
                    });
                }
            };

            TableManageButtons = function () {
                "use strict";
                return {
                    init: function () {
                        handleDataTableButtons();
                    }
                };
            }();

            $('#datatable').dataTable();
            $('#datatable-keytable').DataTable({
                keys: true
            });

            $('#datatable-responsive').DataTable();

            $('#datatable-scroller').DataTable({
                ajax: "js/datatables/json/scroller-demo.json",
                deferRender: true,
                scrollY: 380,
                scrollCollapse: true,
                scroller: true
            });

            var table = $('#datatable-fixed-header').DataTable({
                fixedHeader: true
            });

            TableManageButtons.init();
        });
    </script>
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Doanh thu bán vé ngày</h2>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <table id="datatable-buttons" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Ngày</th>
                        <th>Phụ xe</th>
                        <th>Tên vé ngày</th>
                        <th>Số vé phát ra</th>
                        <th>Số vé thu về</th>
                        <th>Số vé bán được</th>
                        <th>Doanh thu (VNĐ)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Ngay</td>
                            <td>@item.PhuXe.HoTen</td>
                            <td>@item.VeNgay.TenVeNgay</td>
                            <td>@item.SoVePhatRa</td>
                            <td>@item.SoVeThuVe</td>
                            @{
                        int quantity = @item.SoVePhatRa - @item.SoVeThuVe;
                        int sum = quantity * @item.VeNgay.DonGia;
                        <td>@quantity</td>
                        <td>@sum.ToString("0,0")</td>
                            }
                            <td width="100px;">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                        <span class="caret"></span>
                                        <span style="width:20px;" class="sr-only">Toggle Dropdown</span>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a href="/SellSingleTicket/Edit/@item.MaGiaoDich">Sửa</a></li>
                                        <li><a href="/SellSingleTicket/Delete/@item.MaGiaoDich">Xóa</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a href="/SellSingleTicket/Create" class="btn btn-success">Thêm mới</a>
        <a href="/SellSingleTicket/Print" class="btn btn-primary">In ấn</a>
    </div>
</div>

