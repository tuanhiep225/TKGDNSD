@model IEnumerable<HanoiBusSystemManagement.Models.LuuThong>

@{
    ViewBag.Title = "Print";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Danh sách các lưu thông trên các tuyến đường</h2>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <table id="datatable-buttons" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Ngày</th>
                        <th>Ca</th>
                        <th>Biển kiểm soát</th>
                        <th>Tuyến xe</th>
                        <th>Tài xế</th>
                        <th>Phụ xe</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int stt = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@stt</td>
                                <td>@item.Ngay</td>
                                <td>@item.Ca</td>
                                <td>@item.XeBuyt.BienKiemSoat</td>
                                <td>@item.TuyenXe.TenTuyenXe</td>
                                <td>@item.TaiXe.HoTen</td>
                                <td>@item.PhuXe.HoTen</td>
                            </tr>
                            stt++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
