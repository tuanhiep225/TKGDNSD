@model IEnumerable<HanoiBusSystemManagement.Models.TuyenXe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PrintJS
{
    <script>
        $(document).ready(function () {
            var handleDataTableButtons = function () {
                if ($("#datatable-buttons").length) {
                    $("#datatable-buttons").DataTable({
                        dom: "Bfrtip",
                        buttons: [
                        ],
                        responsive: true
                    });
                }
            };

            TableManageButtons = function () {
                "use strict";
                return {
                    init: function () {
                        handleDataTableButtons();
                    }
                };
            }();

            $('#datatable').dataTable();
            $('#datatable-keytable').DataTable({
                keys: true
            });

            $('#datatable-responsive').DataTable();

            $('#datatable-scroller').DataTable({
                ajax: "js/datatables/json/scroller-demo.json",
                deferRender: true,
                scrollY: 380,
                scrollCollapse: true,
                scroller: true
            });

            var table = $('#datatable-fixed-header').DataTable({
                fixedHeader: true
            });

            TableManageButtons.init();
        });
    </script>
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Danh sách các tuyến xe</h2>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <table id="datatable-buttons" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Tên tuyến xe</th>
                        <th>Giờ bắt đầu</th>
                        <th>Giờ kết thúc</th>
                        <th>Điểm đầu</th>
                        <th>Điểm cuối</th>
                        <th>Chi tiết trạm</th>
                        <th>Tần suất (phút)</th>
                        <th>Số lượng xe</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        int count = 0;
                        <tr>
                            <td>@item.TenTuyenXe</td>
                            <td>@item.GioBatDau</td>
                            <td>@item.GioKetThuc</td>
                            <td>@item.DiemDau</td>
                            <td>@item.DiemCuoi</td>
                            <td>@item.ChiTietTram</td>
                            <td>@item.TanSuat</td>
                            @foreach(HanoiBusSystemManagement.Models.XeBuyt i in ViewBag.XeBuyt)
                            {
                                if(@item.MaTuyenXe == @i.MaTuyenXe)
                                {
                                    count++;
                                }
                            }
                            <td>@count</td>
                            <td width="100px;">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                        <span class="caret"></span>
                                        <span style="width:20px;" class="sr-only">Toggle Dropdown</span>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a href="/BusRoute/BusRoute/@item.MaTuyenXe">Xem tuyến đường</a></li>
                                        <li><a href="/BusRoute/Edit/@item.MaTuyenXe">Sửa</a></li>
                                        <li><a href="/BusRoute/Delete/@item.MaTuyenXe">Xóa</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a href="/BusRoute/Create" class="btn btn-success">Thêm mới</a>
        <a href="/BusRoute/Print" class="btn btn-primary">In ấn</a>
    </div>
</div>

